{
  "name": "ausma-ai-documents",
  "version": "0.2.2",
  "description": "## Summary Ausma.ai Documents is a locally hosted document retrieval and summarizing tool accessible via an AI assistant chat interface.",
  "main": "main.js",
  "scripts": {
    "start": "electron . ",
    "//": "debug usable via chrome://inspect from chromium/chrome browsers",
    "debug": "electron --inspect-brk=9229 . ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "author": "V-Industries SIA",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "lv.v-industries.ausma",
    "extraFiles": [
      {
        "from": "dist",
        "to": ".",
        "filter": [
          "flask_app/**"
        ]
      },
      {
        "from": ".",
        "to": ".",
        "filter": [
          "defaults.conf",
          "knowledge_bases/configs/*.json"
        ]
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "icons/**"
    ],
    "linux": {
      "target": [
        {
          "target": "zip"
        }
      ],
      "extraFiles": [
        {
          "from": "scripts/linux/ausma-ai-documents-local",
          "to": "ausma-ai-documents-local",
          "filter": [
            "*"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "zip"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "zip"
        }
      ]
    }
  }
}